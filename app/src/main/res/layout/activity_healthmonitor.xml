<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sachin.healthmonitor.healthmonitor">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="2">

            <TextView
                android:id="@+id/patientID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient ID"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/patientidText" />

            <TextView
                android:id="@+id/age"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/ageText"/>

            <TextView
                android:id="@+id/patientName"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/patientnameText"/>

            <TextView
                android:id="@+id/Sex"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:textAppearance="@style/TextAppearance.AppCompat" />
            <LinearLayout>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Male"
                        android:id="@+id/maleradio"/>
                    <android.support.v7.widget.AppCompatRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Female"
                        android:id="@+id/femaleradio"/>

                </RadioGroup>
            </LinearLayout>
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <Button
                android:id="@+id/runbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run"
                android:onClick="onClickRunbutton"
                android:background="@android:color/holo_green_dark"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/stopbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:onClick="onClickStopbutton"
                android:background="@android:color/holo_red_dark"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/createdbbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create DB"
                android:onClick="onClickCreateDbbutton"
                android:background="@android:color/holo_blue_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:id="@+id/heartrategraphlayout" >
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
